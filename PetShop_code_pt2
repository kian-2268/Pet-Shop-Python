# -------------------- Globals --------------------
pixel_codes = pixel_codes_cat  # start with Sketch 1
pixel_offset_y = 0
direction = 1

# -------------------- Canvas --------------------
canvas_width = len(pixel_codes_cat[0]) * PIXEL_SIZE
canvas_height = len(pixel_codes_cat) * PIXEL_SIZE
canvas = tk.Canvas(header, width=canvas_width, height=canvas_height, bg=BACKGROUND, highlightthickness=0)
canvas.place(x=650, y=25)

current_pixels = pixel_codes_cat
pixel_rects = []

# -------------------- Draw Function --------------------
def draw_pixels():
    global pixel_rects
    canvas.delete("all")
    pixel_rects = []
    for y, row in enumerate(current_pixels):
        row_rects = []
        for x, code in enumerate(row):
            color = color_map.get(code, BACKGROUND)
            x1, y1 = x * PIXEL_SIZE, y * PIXEL_SIZE
            x2, y2 = x1 + PIXEL_SIZE, y1 + PIXEL_SIZE
            rect = canvas.create_rectangle(x1, y1, x2, y2, fill=color, outline=color)
            row_rects.append(rect)
        pixel_rects.append(row_rects)

draw_pixels()

# -------------------- Bobbing --------------------
cat_offset = 0
cat_direction = 1
bob_job = None

def bob():
    global cat_offset, cat_direction, bob_job
    canvas.move("all", 0, cat_direction)
    cat_offset += cat_direction
    if cat_offset >= 5:
        cat_direction = -1
    elif cat_offset <= 0:
        cat_direction = 1
    bob_job = canvas.after(100, bob)

bob()  # start bobbing

# -------------------- Husky Canvas --------------------
HUSKY_PIXEL_SIZE = 10  # smaller or larger than cat PIXEL_SIZE

husky_canvas_width = len(pixel_codes_2[0]) * HUSKY_PIXEL_SIZE
husky_canvas_height = len(pixel_codes_2) * HUSKY_PIXEL_SIZE

husky_canvas = tk.Canvas(root, width=husky_canvas_width, height=husky_canvas_height,
                         bg=BACKGROUND2, highlightthickness=0)
husky_canvas.place(x=45, y=380)  # adjust as needed

current_husky_pixels = pixel_codes_2
husky_pixel_rects = []

# Draw function for husky
def draw_husky_pixels():
    global husky_pixel_rects
    husky_canvas.delete("all")
    husky_pixel_rects = []
    for y, row in enumerate(current_husky_pixels):
        row_rects = []
        for x, code in enumerate(row):
            color = color_map.get(code, BACKGROUND)
            x1, y1 = x * HUSKY_PIXEL_SIZE, y * HUSKY_PIXEL_SIZE
            x2, y2 = x1 + HUSKY_PIXEL_SIZE, y1 + HUSKY_PIXEL_SIZE
            rect = husky_canvas.create_rectangle(x1, y1, x2, y2, fill=color, outline=color)
            row_rects.append(rect)
        husky_pixel_rects.append(row_rects)

draw_husky_pixels()

# -------------------- Husky Bobbing --------------------
husky_offset = 0
husky_direction = 1
husky_bob_job = None

def husky_bob():
    global husky_offset, husky_direction, husky_bob_job
    husky_canvas.move("all", 0, husky_direction)
    husky_offset += husky_direction
    if husky_offset >= 5:
        husky_direction = -1
    elif husky_offset <= 0:
        husky_direction = 1
    husky_bob_job = husky_canvas.after(100, husky_bob)

husky_bob()  # start bobbing

def bob_husky():
    global husky_offset, husky_direction, husky_bob_job
    husky_canvas.move("all", 0, husky_direction)
    husky_offset += husky_direction
    if husky_offset >= 5:
        husky_direction = -1
    elif husky_offset <= 0:
        husky_direction = 1
    husky_bob_job = husky_canvas.after(100, bob_husky)

bob_husky()  # start husky bobbing

