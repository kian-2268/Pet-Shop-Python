# -------------------- Pixel Art Setup --------------------
PIXEL_SIZE = 5

# Colors
DARK_ORANGE = "#FF8C00"
ORANGE = "#FFA500"
LIGHT_ORANGE = "#FFD580"
LIGHT_PINK = "#FFB6C1"
BLACK = "#000000"
WHITE = "#FFFFFF"
BACKGROUND = "#E67E22"
BACKGROUND2 = "#F9D162"

color_map = {
    # Cat colors
    0: BACKGROUND,
    1: DARK_ORANGE,
    2: ORANGE,
    3: LIGHT_ORANGE,
    4: LIGHT_PINK,
    5: BLACK,
    6: WHITE,
    # Husky colors
    10: BLACK,
    11: "#5C5C5C",
    12: "#D9D9D9",
    13: WHITE,
    14: "#00C8FF",
    15: "#FF0000",
    19: BACKGROUND2
}

